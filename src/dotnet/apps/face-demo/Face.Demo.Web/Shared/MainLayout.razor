@inherits LayoutComponentBase

<MudThemeProvider>
    <MudDialogProvider />
    <MudSnackbarProvider>

        <MudLayout>
            <MudAppBar Elevation="4">
                <MudText Typo="Typo.h6">Face Platform Demo</MudText>
            </MudAppBar>

            <MudDrawer Open="true" ClipMode="DrawerClipMode.Always" Elevation="1">
                <NavMenu />
